<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>

        <main class="container">

            <h1>Edit Recipe</h1>

            <form action="/lists/<%= card.listId %>/cards/<%= card.id %>/update" method="post">
                <div class="form-group">
                    <label for="name">Cocktail Name</label>
                    <input value="<%= card.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp">
                </div>
                <div class="form-group">
                    <label for="recipe">Cocktail Recipe</label>
                    <textarea rows="4" class="form-control" name="recipe"><%= card.recipe %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </main>

        <% include ../static/partials/baseScripts.ejs %>

    </body>
</html>