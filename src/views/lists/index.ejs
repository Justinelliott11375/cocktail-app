<!DOCTYPE html>
<html>
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <main class="container">
            <header> <% include ../static/partials/messages.ejs %></header>

            <% include ../static/partials/navbar.ejs %>
            <h1>Lists</h1>

            <% if(currentUser) { %>
                <a href="/lists/new" class="btn btn-success">New List</a>
            <% } %>
            <ul class="list-group">
                <% lists.forEach((list) => { %>
                    <li class="list-group-item">
                        <a href="/lists/<%= list.id %>"> <%= list.title %> </a>
                    </li>
                <% }) %>
            </ul>

        </main>
    </body>
</html>